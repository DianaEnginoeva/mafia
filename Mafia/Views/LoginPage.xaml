<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Mafia.LoginPage">
	<ContentPage.Content>
		<StackLayout Margin="25,30,25,0">
			<Label Text="МАФИЯ" 
					TextColor="#e45931" 
					FontFamily="LineaturaRegular.ttf#Lineatura"
					FontSize="40" 
					HorizontalTextAlignment="Center" 
					Margin="0, 0, 0, 50"/>
			<Label Text="Введите свое имя" 
					TextColor="#20242d" 
					FontFamily="PFHandbookPro-Regular.ttf#PF Handbook Pro"
					FontSize="24" 
					Margin="0, 0, 0, 15" />
				<Entry Text="{Binding UserName}" TextColor="#20242d" />
			
			

			<Button Text="Сохранить" Command="{Binding CreateRoomPage}" 
					HorizontalOptions="Center" 
					BackgroundColor="#e45931" 
					TextColor="#ecd5bc"
					FontFamily="akrobat.ttf#Akrobat"
					FontSize="24"
					WidthRequest="220"
					HeightRequest="60"
					Margin="0, 20, 0, 0"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
