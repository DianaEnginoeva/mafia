<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Mafia.CreateRoom">
	<ContentPage.Content>
		<StackLayout  Margin="25,0,25,0">
			<Label Text="Введите название комнаты" 
					TextColor="#20242d" 
					FontFamily="PFHandbookPro-Regular.ttf#PF Handbook Pro"
					FontSize="24" 
					Margin="0, 70, 0, 30" />
			<Entry Text="{Binding RoomName}" TextColor="#20242d" />
			<Button Text="Создать" 
					Command="{Binding NewRoom}" 
					HorizontalOptions="Center" 
					BackgroundColor="#e45931" 
					TextColor="#ecd5bc"
					FontFamily="akrobat.ttf#Akrobat"
					FontSize="24"
					WidthRequest="220"
					HeightRequest="60"
					Margin="0, 20, 0, 30"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
